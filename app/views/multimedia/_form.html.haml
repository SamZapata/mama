= form_for @multimedium do |f|
  - if @multimedium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@multimedium.errors.count, "error")} prohibited this multimedium from being saved:"
      %ul
        - @multimedium.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :about
    = f.text_field :about
  .field
    = f.label :uri_path
    = f.text_field :uri_path
  .field
    = f.label :capture_date
    = f.date_select :capture_date
  .actions
    = f.submit 'Save'
